<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    LookingType<br />
    <% @user.looking_types.each do |look| %>
    <%= check_box_tag(:looking_types,look.id) %>
    <%= label_tag(:looking_types,look.type.name) %>,
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
