<h1>Editing user</h1>

<%= render 'form' %>

<h2>Add a looking types:</h2>
<%= form_for([@user, @user.looking_types.build]) do |f| %>
<div class="field">
  <% @user.not_looking.each do |type| %>
  <%= check_box_tag(:looking_types,type.id) %>
  <%= label_tag(:looking_types,type.name) %>,
  <% end %>
</div>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>

<%= link_to 'Show', @user %> |
<%= link_to 'Back', users_path %>
